<%= render "partial/navbar" %>

<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3 text-center">
      <h2>ログイン</h2>

      <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <hr>

        <%= link_to "Sign in with Facebook", user_facebook_omniauth_authorize_path, class: "btn btn-facebook" %>
        <hr>

        <div class="form-group">
          <%= f.label :Eメール %><br />
          <%= f.email_field :email,:class => 'form-control', :placeholder => 'your mail', autofocus: true %>
        </div>

        <div class="form-group">
          <%= f.label :パスワード %><br />
          <%= f.password_field :password,:class => 'form-control', :placeholder => 'your password', autocomplete: "off" %>
        </div>

        <% if devise_mapping.rememberable? -%>
          <div class="form-group">
            <%= f.check_box :remember_me %>
            <%= f.label :ログイン情報を保存 %>
          </div>
        <% end -%>

        <div class="actions">
          <%= f.submit "ログイン",:class => 'btn btn-primary'%>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>